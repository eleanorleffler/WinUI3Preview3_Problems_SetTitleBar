<ContentDialog
    x:Class="SetTitleBarUWP.ContentDialogWithFilePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SetTitleBarUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Content Dialog w/File Picker"
    PrimaryButtonText="Ok"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <Grid>

        <StackPanel Orientation="Vertical">

            <TextBlock x:Name="contentTextBlock"/>

            <Button Name="filePickerButton"
                Content="File Picker"
                Margin="0,20,0,0"
                ToolTipService.ToolTip="Title Bar will be inactive, including buttons"
                Click="filePickerButton_Click"/>

        </StackPanel>

    </Grid>
</ContentDialog>
